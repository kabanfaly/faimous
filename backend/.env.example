# Flask
FLASK_ENV=development
FLASK_APP=run.py
# Port (default 5001 to avoid macOS AirPlay on 5000)
# FLASK_PORT=5001

# Secret key for sessions and JWT (change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# CORS (comma-separated allowed origins for the frontend)
CORS_ORIGINS=http://localhost:5174,http://127.0.0.1:5174

# Database (PostgreSQL)
SQLALCHEMY_DATABASE_URI=postgresql://faimous:faimous@localhost:5432/faimous

# Redis (optional). Leave unset to run without Redis (Celery uses in-memory broker, rate limits in-memory).
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
